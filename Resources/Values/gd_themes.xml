<resources>

	<style name="Theme.GreenDroid" parent="@android:style/Theme">
		
		<item name="gdPageIndicatorStyle">@style/GreenDroid.Widget.PageIndicator</item>
	</style>
	
	
	<style name="Theme.GreenDroid.NoTitleBar" parent="@style/Theme.GreenDroid">
	
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:windowNoTitle">true</item>
	
	</style>
	
	<!-- 
	   The following themes inherits from the Theme.Light Android base theme. 
	   They are strict copies of the previous themes which a large source of errors
	   However, it looks like there are no way to overcome this (multiple inheritance
	   is not permitted).
	-->
	<style name="Theme.GreenDroid.Light" parent="@android:style/Theme.Light">
		
		<item name="gdPageIndicatorStyle">@style/GreenDroid.Widget.PageIndicator</item>
	</style>
	
	<style name="Theme.GreenDroid.Light.NoTitleBar" parent="@style/Theme.GreenDroid.Light">
	
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:windowNoTitle">true</item>
	
	</style>
</resources>